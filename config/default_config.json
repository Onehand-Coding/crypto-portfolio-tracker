{
  "version": "2.0.0",
  "target_allocation": {
    "BTC": 0.40,
    "ETH": 0.25,
    "SOL": 0.15,
    "RENDER": 0.10,
    "TAO": 0.10
  },
  "apis": {
    "coingecko": {
      "base_url": "https://api.coingecko.com/api/v3",
      "rate_limit": 100,
      "timeout": 30
    },
    "binance": {
      "rate_limit": 1200,
      "timeout": 30,
      "testnet": false
    }
  },
  "database": {
    "path": "data/portfolio.db",
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "cleanup_days": 90,
    "connection_timeout": 30
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_config": {
      "enabled": true,
      "path": "logs/portfolio_tracker.log",
      "max_size_mb": 10,
      "backup_count": 5,
      "rotation": "size"
    },
    "console_config": {
      "enabled": true,
      "colored": true
    }
  },
  "exports": {
    "path": "data/exports/",
    "formats": {
      "excel": {
        "enabled": true,
        "include_charts": true,
        "password_protected": false
      },
      "html": {
        "enabled": true,
        "mobile_optimized": true,
        "include_charts": true
      },
      "csv": {
        "enabled": true,
        "separate_files": true
      }
    },
    "cleanup": {
      "enabled": true,
      "keep_days": 30
    }
  },
  "portfolio": {
    "minimum_value_usd": 1.0,
    "stablecoin_symbols": ["USDT", "USDC", "BUSD", "DAI"],
    "rebalance_threshold_percent": 2.0,
    "cost_basis_method": "fifo"
  },
  "rebalancing_strategy": {
    "base_on_cost": true,
    "allow_selling": true,
    "never_sell_symbols": ["BTC", "ETH"]
  },
  "visualization": {
    "chart_style": "seaborn-v0_8",
    "color_palette": "husl",
    "figure_size": [15, 12],
    "dpi": 300,
    "formats": ["png", "svg"]
  },
  "notifications": {
    "enabled": false,
    "email": {
      "smtp_server": "smtp.gmail.com",
      "port": 587,
      "username": "",
      "password": "",
      "recipients": []
    },
    "webhook": {
      "url": "",
      "enabled": false
    }
  },
  "symbol_mappings": {
    "coingecko_ids": {
      "USDT": "tether",
      "LDUSDT": "tether",
      "BTC": "bitcoin",
      "LDBTC": "bitcoin",
      "ETH": "ethereum",
      "LDETH": "ethereum",
      "SOL": "solana",
      "LDSOL": "solana",
      "RNDR": "render-token",
      "RENDER": "render-token",
      "TAO": "bittensor",
      "PEPE": "pepe",
      "LDPEPE": "pepe",
      "HMSTR": "hamster-kombat",
      "LDHMSTR": "hamster-kombat"
    }
  },
  "symbol_normalization_map": {
    "RENDER": "RNDR"
  }
}
