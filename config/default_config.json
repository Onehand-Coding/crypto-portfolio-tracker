{
  "version": "2.0.0",
  "apis": {
    "coingecko": {
      "base_url": "https://api.coingecko.com/api/v3",
      "rate_limit": 100,
      "timeout": 30,
      "request_delay_ms": 15000
    },
    "binance": {
      "base_url": "https://api.binance.com",
      "sapi_url": "https://api.binance.com/sapi/v1",
      "futures_url": "https://fapi.binance.com/fapi/v1",
      "rate_limit": 1200,
      "testnet": false,
      "timeout": 500,
      "max_retries_per_batch": 2,
      "retry_delay_sec": 30,
      "recv_window": 10000,
      "request_delay_ms": 500,
      "batch_days": 7
    },
    "yfinance": {
      "request_delay_ms": 1000
    }
  },
  "database": {
    "path": "data/portfolio.db",
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "cleanup_days": 90,
    "connection_timeout": 30
  },
  "logging": {
    "level": "DEBUG",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_config": {
      "enabled": true,
      "path": "logs/portfolio_tracker.log",
      "max_size_mb": 10,
      "backup_count": 5,
      "rotation": "size"
    },
    "console_config": {
      "enabled": true,
      "colored": true
    }
  },
  "exports": {
    "path": "data/exports/",
    "formats": {
      "excel": {
        "enabled": true,
        "include_charts": true,
        "password_protected": false
      },
      "html": {
        "enabled": true,
        "mobile_optimized": true,
        "include_charts": true
      },
      "csv": {
        "enabled": true,
        "separate_files": true
      }
    },
    "cleanup": {
      "enabled": true,
      "keep_days": 30
    }
  },
  "portfolio": {
    "minimum_value_usd": 1.0,
    "stablecoin_symbols": ["USDT"],
    "crypto_quotes": [],
    "rebalance_threshold_percent": 2.0,
    "cost_basis_method": "fifo",
    "p2p_fiat_currency": "PHP",
    "binance_csv_path": "data/binance_export.csv",
    "copy_trading_csv_path": "data/copy_trading_transfers.csv",
    "assets_for_internal_transfer_check": ["USDT"]
  },
  "target_allocation": {
    "BTC": 0.35,
    "ETH": 0.20,
    "SOL": 0.12,
    "RENDER": 0.08,
    "TAO": 0.08,
    "AVAX": 0.06,
    "LINK": 0.06,
    "ONDO": 0.05
  },
  "rebalancing_strategy": {
    "base_on_cost": true,
    "allow_selling": true,
    "never_sell_symbols": []
  },
  "symbol_mappings": {
    "coingecko_ids": {
      "USDT": "tether",
      "LDUSDT": "tether",
      "BTC": "bitcoin",
      "LDBTC": "bitcoin",
