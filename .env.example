# Binance API Configuration
# Get these from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: Enable ONLY "Enable Reading" permission for security
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Optional: Binance testnet (for testing)
# BINANCE_TESTNET=false

# CoinGecko API (free tier, no key required)
# For pro features, get API key from: https://www.coingecko.com/en/api
# COINGECKO_API_KEY=your_coingecko_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Database Configuration
DATABASE_PATH=data/portfolio.db
BACKUP_ENABLED=true

# Export Configuration
EXPORT_PATH=data/exports/
KEEP_EXPORTS_DAYS=30

# Security Settings
ENCRYPT_EXPORTS=false
# EXPORT_PASSWORD=your_secure_password_here

# Performance Settings
API_RATE_LIMIT_ENABLED=true
CACHE_PRICES_MINUTES=5
MAX_CONCURRENT_REQUESTS=10

# Development Settings
DEBUG_MODE=false
MOCK_API_CALLS=false
